    <head><% include partials/head %></head>
    <body>
        <div id="form">
            <p>Sign up:</p>
            <h4><%= message %></h4>
            <hr/>
            <form action="/signup" method="post">
              <div class="form-group">
                <label for="form_username">Username</label>
                <input id="form_username" type="text" name="username" />
              </div>
              <div class="form-group">
                <label for="form_username">Email</label>
                <input id="form_username" type="text" name="email" />
              </div>
              <div class="form-group">
                <label for="form_password">Password</label>
                <input id="form_password" type="password" name="password" />
              </div>
              <button class="btn btn-primary btn-block" type="submit" value="Submit">Create account</button>
            </form>
            <hr/>
            <a class="btn btn-success btn-block" href="/login">Already have an account? Login</a>
          </div>
